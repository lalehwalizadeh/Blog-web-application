<%- include('partials/header.ejs') %>

<h3>RECENT POSTS</h3>
<main>
	<ul>
		<% if(post.length >0){ post.forEach((element) => { %>
		<div class="content">
			<li>
				<h2><%= element.title %></h2>
				<p><%= element.description %></p>
				<div class="imeg">
					<% if(element.picture){ %>
					<img src=" <%=element.picture %>" alt="picture" />
					<% }else{ %>
					<img src="/images/placeholder.jpg" alt="picture" />
					<% } %>
				</div>
				<div class="content">
					<a class="edit" href="/edit/<%= element.id %>" >Edit</a>

					<!-- <form action="/edit/<%= element.id %>" method="GET">
						<button class="edit">Edit</button>
					</form> -->
					<form action="/delete/<%= element.id %>" method="POST">
						<button class="delete" id="delete" type="submit">Delete</button>
					</form>
				</div>
			</li>
		</div>

		<% }); }else{ %>
		<div class="content">
			<div class="head">
				Create
				<li><a href="/new-post">New Post</a></li>
			</div>
		</div>
		<% } %>
	</ul>
</main>

<%- include('partials/footer.ejs') %>
